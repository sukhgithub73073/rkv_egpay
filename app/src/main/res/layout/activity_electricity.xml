<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:airbnb="http://schemas.android.com/tools">

    <data>
        <variable
            name="planAdapter"
            type="com.app.rkvmoneyrecharge.adapters.PlanAdapter" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/colorPrimary"
                >

                <TextView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Back"
                    android:textColor="@color/white"
                    android:layout_gravity="center|start"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginStart="@dimen/_10sdp"

                    />

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textStyle="bold"

                    android:text="Electricity"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_16ssp"
                    android:padding="@dimen/_10sdp" />


            </FrameLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:src="@drawable/logo"
                        android:layout_marginTop="@dimen/_10sdp"
                        />
                    <LinearLayout
                        android:id="@+id/second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/f"
                        android:layout_marginHorizontal="@dimen/_20sdp"

                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="vertical">




                        <TextView
                            android:id="@+id/txt_circle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textSize="@dimen/_11ssp"
                            android:layout_marginTop="2dp"
                            />


                        <Spinner
                            android:id="@+id/spi_state"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_1sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:background="@drawable/et_bg"
                            android:dropDownSelector="@drawable/spinner_ripple"
                            android:popupBackground="@drawable/popup_background"
                            android:scrollbarStyle="insideOverlay"
                            android:scrollbars="vertical" />



                            <Spinner
                                android:id="@+id/spi_oprator"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_1sdp"
                                android:layout_marginBottom="@dimen/_1sdp"
                                android:background="@drawable/et_bg"
                                android:dropDownSelector="@drawable/spinner_ripple"
                                android:popupBackground="@drawable/popup_background"
                                android:scrollbarStyle="insideOverlay"
                                android:scrollbars="vertical" />


                        <EditText
                            android:id="@+id/et_consumer_no"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/_5sdp"
                            android:hint="Enter Consumer Number"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="15"
                            android:maxLines="1"
                            android:background="@drawable/et_bg"

                            android:paddingStart="@dimen/_15sdp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:textSize="@dimen/_12sdp" />


                        <EditText
                            android:id="@+id/et_account"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/_5sdp"
                            android:hint="Enter Account Number"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:background="@drawable/et_bg"
                            android:paddingStart="@dimen/_15sdp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:textSize="@dimen/_12sdp" />


                        <TextView
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginVertical="@dimen/_15sdp"
                            android:background="@drawable/btn_bg"
                            android:gravity="center"
                            android:text="Bill Fetch"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                    </LinearLayout>



                </LinearLayout>

            </androidx.core.widget.NestedScrollView>





        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>