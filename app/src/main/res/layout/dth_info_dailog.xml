<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.app.rkvmoneyrecharge.models.dth_info_model.Response" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/lin_landline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/operator_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/user_profile"
                android:layout_gravity="center"

                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/txt_title"
                            android:layout_width="0sp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="Plan Name : "
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"

                            />

                        <TextView
                            android:id="@+id/plan_name"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:layout_gravity="center|end"
                            android:gravity="center|end"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/black"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="Monthly Pack : "
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"


                            />

                        <TextView
                            android:id="@+id/monthly_pack"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@{model.monthlyRecharge.toString()}"

                            android:layout_gravity="center|end"
                            android:gravity="center|end"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/black"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="Next Recharge Date : "
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/nxt_rc"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@{model.rechargedueDate.toString()}"
                            android:layout_gravity="center|end"
                            android:gravity="center|end"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/black"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="Status : "
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@{model.customerStatus.toString()}"
                            android:layout_gravity="center|end"
                            android:gravity="center|end"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/black"


                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="Name : "
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"

                            />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@{model.name}"
                            android:layout_gravity="center|end"
                            android:gravity="center|end"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/black"


                            />


                    </LinearLayout>




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:background="@drawable/dotted"
                        android:layout_marginTop="@dimen/_3sdp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="Balance:"
                            android:layout_gravity="center|start"
                            android:gravity="center|start"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"

                            />

                        <TextView

                            android:id="@+id/txt_amt"
                            android:layout_width="0sp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text='@{"â‚¹ " + model.balance}'
                            android:layout_gravity="center|end"
                            android:gravity="center|end"
                            android:textSize="@dimen/_15ssp"
                            android:textColor="@color/colorPrimary" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp">



                <Button
                    android:id="@+id/cancel"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginStart="@dimen/_10sdp" />


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>