<!--                            android:textColor="@color/black" />-->

<!--                        <TextView-->
<!--                            android:id="@+id/term_condition"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:gravity="center"-->
<!--                            android:text="Terms &amp; Conditions"-->
<!--                            android:layout_marginStart="@dimen/_5sdp"-->
<!--                            android:textColor="@color/colorPrimary"-->
<!--                            android:textSize="@dimen/_11ssp" />-->

<!--                    </LinearLayout>-->

                    <TextView
                        android:id="@+id/txt_forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|end"
                        android:gravity="center|end"
                        android:text="Forgot Password ?"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_11ssp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:background="@drawable/new_btn_bg"
                        android:text="LOG IN"
                        android:backgroundTint="@color/colorPrimary"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_30sdp"

                        >


                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_round_corner_btn"
                            android:text="Facebook"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/fb_btn"
                            android:textSize="@dimen/_13ssp" />


                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/new_round_corner_btn"
                            android:text="Google"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textAllCaps="true"
                            android:backgroundTint="@color/google_btn"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13ssp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="Canâ€™t Have an Account? Sign Up"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:visibility="gone"
                        android:textSize="@dimen/_10ssp" />


                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>
</layout>


